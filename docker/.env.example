# Appwrite Environment Configuration
# Copy this file to .env and customize for your deployment

# ==================== DATABASE ====================
MYSQL_ROOT_PASSWORD=appwrite_root_secure_2026_CHANGE_THIS
MYSQL_PASSWORD=appwrite_db_secure_2026_CHANGE_THIS

# ==================== APPWRITE CORE ====================
APPWRITE_DOMAIN=appwrite.extropos.org
APPWRITE_OPENSSL_KEY=dbccde1aa2b0b905f3cda5203b070a75e0ee2e04ed215fd3a48462d77e3ab797

# Security settings for production
APPWRITE_DISABLE_ABUSE=enabled
APPWRITE_FORCE_HTTPS=disabled  # Set to 'enabled' if using SSL
APPWRITE_ROUTER_PROTECTION=disabled

# Ports
APPWRITE_HTTP_PORT=8080
APPWRITE_HTTPS_PORT=8443

# ==================== EMAIL (Optional) ====================
# Configure SMTP for password resets, invitations, etc.
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=tls
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SYSTEM_EMAIL_NAME=ExtroPOS
SYSTEM_EMAIL_ADDRESS=no-reply@extropos.org

# ==================== STORAGE ====================
STORAGE_LIMIT=30000000000  # 30GB (adjust based on your needs)

# ==================== FUNCTIONS ====================
FUNCTIONS_CPUS=1
FUNCTIONS_MEMORY=512
FUNCTIONS_MEMORY_SWAP=512
EXECUTOR_SECRET=your-executor-secret-key-CHANGE_THIS

# ==================== LOGGING ====================
LOGGING_PROVIDER=  # Leave empty for console logging
LOGGING_CONFIG=    # Leave empty for default

# ==================== MONITORING ====================
USAGE_STATS=enabled

# ==================== ANTIVIRUS (Optional) ====================
# Uncomment to enable ClamAV antivirus scanning
# ANTIVIRUS_HOST=clamav
# ANTIVIRUS_PORT=3310
