# ==========================================
# FlutterPOS Cloud Storage Configuration
# E:/ Drive Cloud Setup
# ==========================================

# ==========================================
# DOMAIN & EMAIL
# ==========================================
DOMAIN=localhost
ADMIN_EMAIL=admin@extropos.org
SYSTEM_EMAIL_NAME=ExtroPOS
SYSTEM_EMAIL_ADDRESS=no-reply@extropos.org

# ==========================================
# DATABASE CREDENTIALS
# ==========================================
MYSQL_ROOT_PASSWORD=appwrite_root_pw_secure_change_me
MYSQL_PASSWORD=appwrite_db_pw_secure_change_me

# ==========================================
# REDIS CACHE CREDENTIALS
# ==========================================
REDIS_PASSWORD=redis_secure_pw_change_me

# ==========================================
# SECURITY KEYS
# ==========================================
# Generate new key: openssl rand -hex 32
OPENSSL_KEY=dbccde1aa2b0b905f3cda5203b070a75e0ee2e04ed215fd3a48462d77e3ab797

# ==========================================
# API & AUTHENTICATION
# ==========================================
API_KEY=your_secure_api_key_here_change_me
SUPER_ADMIN_API_KEY=super_admin_secret_key_2025_secure_change_me

# ==========================================
# HTTPS/SSL CONFIGURATION
# ==========================================
# Set to 'true' for production with SSL certificate
FORCE_HTTPS=false

# ==========================================
# LOGGING
# ==========================================
# Options: stdout, syslog, papertrail
LOGGING_PROVIDER=stdout

# ==========================================
# CLOUD STORAGE PATHS
# ==========================================
# All cloud data will be stored on E:/ drive
# Ensure E:/appwrite-cloud/ directory exists with proper permissions
CLOUD_STORAGE_PATH=E:/appwrite-cloud

# ==========================================
# APPWRITE CONFIGURATION
# ==========================================
APPWRITE_VERSION=1.5.7
APPWRITE_ENDPOINT=http://localhost:8080/v1
APPWRITE_PROJECT_ID=69392e4c0017357bd3d5

# ==========================================
# DEVELOPMENT/PRODUCTION
# ==========================================
# Set to 'production' for live deployments
APP_ENV=development
